$('#save_ops_speciale').on('submit', function(e) {
    // On emp�che le navigateur de soumettre le formulaire
    e.preventDefault();
    let contenu = tinymce.get("contenu").getContent();
       $('#contenu').val(contenu);
    let liens = tinymce.get("liens").getContent();
       $('#liens').val(liens);

    $('#send').addClass('running');
    toastr.info('Envoie des données en cours...');

    var $form = $(this);
    var formdata = (window.FormData) ? new FormData($form[0]) : null;
    var data = (formdata !== null) ? formdata : $form.serialize() + '&contenu=' + contenu + '&liens=' + liens;

    if (myDropzone.files != "") {
        myDropzone.processQueue();
        myDropzone.on("successmultiple", function(file, response) {
			console.log(data);
			$.ajax({
				url: $form.attr('action'),
				type: $form.attr('method'),
				contentType: false,
				processData: false,
				data: data,
				success: function(reponse) {
					if (reponse > 0) {
						toastr.clear();
						toastr.success("{{'systeme.requetes.succes'|trans}}");
						window.location = document.referrer;
					} else if (reponse == 0) {
						toastr.clear();
						toastr.error("{{'systeme.requetes.erreur'|trans}}");
					}
				},
				error: function(reponse) {
					$('#send').removeClass('running');
					toastr.clear();
					toastr.error("{{'general.error'|trans }}");
				}
			});
        });
    } else {
		toastr.clear();
        toastr.warning('Image obligatoire');
    }
    return false;
});

